extends ../layouts/common
block content
	h2 Sign up
	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/login", method="POST")
		.form-group
			label(for="name").font-weight-bold Name 
			input#name.form-control(placeholder="Tên người dùng", name="name", type="text" required)
		.form-group
			label(for="email").font-weight-bold Email 
			input#email.form-control(placeholder="Email đăng nhập", name="email", type="text" required)
		.form-group
			label(for="password").font-weight-bold Password 
			input#password.form-control(placeholder="Mật khẩu", name="password", type="password" required)
		.form-group
			label(for="repassword").font-weight-bold Confirm password 
			input#repassword.form-control(placeholder="Nhập lại mật khẩu", name="repassword", type="password" required)
		button.btn.btn-outline-success Sign up