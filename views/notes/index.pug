extends ../layouts/common
block content
    h2.mb-5 All notes
    .row
        each note in notes
            .col-md-3.note
                .card.text-white.mb-3(style='max-width: 18rem;' class="bg-"+note.color)
                    svg.bi.bi-x-circle-fill.ml-auto.mr-1.mt-1(width='1em', height='1em', viewbox='0 0 16 16', fill='currentColor', xmlns='http://www.w3.org/2000/svg')
                      path(fill-rule='evenodd', d='M16 8A8 8 0 110 8a8 8 0 0116 0zm-4.146-3.146a.5.5 0 00-.708-.708L8 7.293 4.854 4.146a.5.5 0 10-.708.708L7.293 8l-3.147 3.146a.5.5 0 00.708.708L8 8.707l3.146 3.147a.5.5 0 00.708-.708L8.707 8l3.147-3.146z', clip-rule='evenodd')
                    .card-header= note.title
                    .card-body
                        p.card-text= note.content
